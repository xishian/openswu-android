<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/linux"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/version">

        <TableRow
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_weight="1"
                android:text="开发:"
                android:gravity="right"/>

            <TextView
                android:id="@+id/developer_zmy"
                android:paddingLeft="20dp"
                android:text="@string/zmy"
                />

            <TextView
                android:id="@+id/developer_yk"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:text="@string/yk" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="100dp">

            <TextView
                android:gravity="right"
                android:text="服务器:"
                />

            <TextView
                android:id="@+id/developer_csd"
                android:paddingLeft="20dp"
                android:text="@string/csd"
                />

        </TableRow>

        <TableRow
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_weight="1"
                android:gravity="right"
                android:text="美工:"/>

            <TextView
                android:id="@+id/developer_tp"
                android:paddingLeft="20dp"
                android:text="@string/tp"
                />

            <TextView
                android:id="@+id/developer_gky"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:text="@string/gky"
                />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/copy_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swuos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="Copyright© 2016 linux.swu.edu.cn\nAll rights reserved"/>

    <TextView
        android:id="@+id/swuos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/swuos"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"

            android:text=""/>

        <TextView
            android:id="@+id/about_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"

            android:text="反馈"/>
    </RelativeLayout>
</RelativeLayout>
